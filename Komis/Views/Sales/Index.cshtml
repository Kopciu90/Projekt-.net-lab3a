@model IEnumerable<Komis.Models.Sale>

@{
    ViewData["Title"] = "Lista sprzedaży";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Dodaj nową transakcję</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Klient</th>
            <th>Samochód</th>
            <th>Data sprzedaży</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Customer.FirstName) @Html.DisplayFor(modelItem => item.Customer.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Car.Make) @Html.DisplayFor(modelItem => item.Car.Model)</td>
                <td>@Html.DisplayFor(modelItem => item.DateSold)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-success">Edytuj</a>
                    <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-info">Szczegóły</a>
                    <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
