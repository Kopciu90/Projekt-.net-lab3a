@model Komis.Models.Sale

<h2>Details</h2>

<div>
    <h4>Sale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Car</dt>
        <dd class="col-sm-10">@Model.Car.Make @Model.Car.Model (@Model.Car.Year)</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer.FirstName @Model.Customer.LastName</dd>

        <dt class="col-sm-2">Date Sold</dt>
        <dd class="col-sm-10">@Model.DateSold.ToString("d")</dd>
    </dl>
</div>
<a asp-action="Index" class="btn btn-primary">Back to List</a>
