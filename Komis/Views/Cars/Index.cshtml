@model IEnumerable<Komis.Models.Car>

@{
    ViewData["Title"] = "Lista samochodów";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Dodaj nowy samochód</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Rok</th>
            <th>Cena</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Make)</td>
                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-success">Edytuj</a>
                    <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-info">Szczegóły</a>
                    <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
